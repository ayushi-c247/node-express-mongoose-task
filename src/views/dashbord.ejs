                                        <%=blog[j].blogid[k]%>

                                            <% } %>
                                                <% } else {%>
                                                    <% } %>
                                                        <% } %>
                                                            <% } %>

                    </td>
                    <td>

                    </td>
                    <td>
                        <% if(comment) { %>
                            <% for(var j=0; j<comment.length; j++) { %>
                                <% if(comment[j]._id==users[i]._id) { %>

                                    <% for(var k=0; k<comment[j].commentid.length; k++) { %>
                                        <%=comment[j].commentid[k]%>

                                            <% } %>
                                                <% } else {%>
                                                    <% } %>
                                                        <% } %>
                                                            <% } %>
                    </td>

                    <td>
                        <button onclick="window.location='/api/v1/admin/userStatusUpdate/<%= users[i]._id %>'">
                            <%= users[i].status%>
                        </button>
                    </td>



                    <td>
                        <a href='/api/v1/admin/delete/<%= users[i]._id %>'>Delete</a>
                    </td>

